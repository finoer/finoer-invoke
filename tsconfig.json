{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "ESNext",
        "composite": true,
        "outDir": "./dist", // 指定输出目录
        "baseUrl": ".",
        "lib": [
            "ES5",
            "ES6",
            "ES7",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ESNext",
            "dom",
            "scripthost",
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@root/*": [
                "./*"
            ],
            "@/*": [
                "./src/*"
            ],
            "@test/*": [
                "./test/*"
            ],
            "Packs/*": [
                "../*"
            ],
        }
    },
    "include": [
        "src",
        "test"
    ],
    // typedoc
    "typedocOptions": {
        "inputFiles": [
            "src"
        ],
        "out": "docs",
        "mode": "file",
        "theme": "default"
    }
}